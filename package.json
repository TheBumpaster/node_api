{
    "name": "nodejs_api",
    "version": "1.0.0",
    "description": "TypeScript NodeJS Docker",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon",
        "build": "npm run lint && tsc",
        "start": "node dist/index.js",
        "lint": "eslint server/**/*.ts --quiet --fix",
        "pretest": "npm run build",
        "test": "ava",
        "docs": "typedoc server/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TheBumpaster/template_node_ts.git"
    },
    "keywords": [
        "nodejs",
        "typescript"
    ],
    "author": "Ismar Hadzic",
    "license": "SEE LICENSE IN LICENSE",
    "bugs": {
        "url": "https://github.com/TheBumpaster/template_node_ts/issues"
    },
    "homepage": "https://github.com/TheBumpaster/template_node_ts#readme",
    "husky": {
        "hooks": {
            "pre-commit": "npm run build",
            "pre-push": "npm run test"
        }
    },
    "dependencies": {
        "express": "4.17.1",
        "winston": "3.3.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.9",
        "@types/node": "14.14.20",
        "@typescript-eslint/eslint-plugin": "4.12.0",
        "@typescript-eslint/parser": "4.12.0",
        "ava": "3.15.0",
        "dotenv": "8.2.0",
        "eslint": "7.10.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "4.3.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "test-listen": "1.1.0",
        "ts-node": "^9.1.1",
        "typedoc": "^0.20.13",
        "typescript": "4.0"
    }
}
