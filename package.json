{
    "name": "nodejs_api",
    "version": "1.0.0",
    "description": "TypeScript NodeJS Docker",
    "main": "index.js",
    "scripts": {
        "dev": "npm run docs && nodemon -r dotenv/config",
        "build": "npm run lint && tsc",
        "start": "node dist/index.js",
        "lint": "eslint server/**/*.ts --quiet --fix",
        "test": "mocha --require ts-node/register --require source-map-support/register ./tests/**/*.spec.ts --colors --full-trace --exit",
        "k6": "k6 run tests/test.js",
        "docs": "typedoc server/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TheBumpaster/node_api.git"
    },
    "keywords": [
        "nodejs",
        "typescript"
    ],
    "author": "Ismar Hadzic",
    "license": "SEE LICENSE IN LICENSE",
    "bugs": {
        "url": "https://github.com/TheBumpaster/node_api/issues"
    },
    "homepage": "https://github.com/TheBumpaster/node_api#readme",
    "husky": {
        "hooks": {
            "pre-commit": "npm run build",
            "pre-push": "npm run test"
        }
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-mongodb-session": "^2.4.1",
        "cors": "^2.8.5",
        "express": "4.17.1",
        "express-session": "^1.17.1",
        "helmet": "^4.3.1",
        "joi": "^17.3.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.11.11",
        "swagger-jsdoc": "^6.0.1",
        "swagger-ui-express": "^4.1.6",
        "winston": "3.3.3"
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/chai-http": "^4.2.0",
        "@types/connect-mongodb-session": "^2.4.0",
        "@types/express": "^4.17.9",
        "@types/express-session": "^1.17.3",
        "@types/faker": "^5.1.5",
        "@types/joi": "^14.3.4",
        "@types/mocha": "^8.2.0",
        "@types/node": "14.14.20",
        "@typescript-eslint/eslint-plugin": "4.12.0",
        "@typescript-eslint/parser": "4.12.0",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "dotenv": "8.2.0",
        "eslint": "7.10.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "faker": "^5.1.0",
        "husky": "4.3.0",
        "k6": "0.0.0",
        "mocha": "^8.2.1",
        "mongodb-memory-server": "^6.9.2",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "test-listen": "1.1.0",
        "ts-node": "^9.1.1",
        "typedoc": "^0.20.13",
        "typescript": "4.0"
    }
}
